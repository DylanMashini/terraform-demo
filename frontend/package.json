{
  "name": "my-library",
  "description": "A base template for building a shareable web components library with Vite + Svelte",
  "version": "0.0.0",
  "type": "module",
  "module": "dist/lib/my-library.js",
  "main": "dist/lib/my-library.umd.js",
  "scripts": {
    "start": "npm run dev -s",
    "dev": "./dev.sh",
    "dev:demo": "vite --config vite.demo.config.ts",
    "build": "vite build",
    "build:demo": "vite build --config vite.demo.config.ts",
    "preview": "vite preview --config vite.demo.config.ts",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "prepublishOnly": "npm run build -s"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^3.0.0",
    "@types/node": "^20.12.7",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "postcss-load-config": "^5.0.2",
    "svelte": "4.x",
    "svelte-check": "^3.0.3",
    "svelte-preprocess": "^5.0.1",
    "tailwindcss": "^3.3.6",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "vite": "^4.0.4"
  },
  "files": [
    "dist/lib"
  ],
  "dependencies": {
    "esbuild": "^0.20.2",
    "vite-plugin-css-injected-by-js": "^3.5.1"
  }
}
